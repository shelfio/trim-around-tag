{
  "name": "@shelf/trim-around-tag",
  "version": "3.0.0",
  "description": "Trims text to max length around custom HTML tag",
  "keywords": [],
  "repository": "shelfio/trim-around-tag",
  "license": "MIT",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "shelf.io"
  },
  "files": [
    "lib"
  ],
  "sideEffects": false,
  "type": "module",
  "exports": "./lib/index.js",
  "module": "./lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rm -rf lib/ && tsc",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts,.json --fix",
    "lint:ci": "eslint . --ext .js,.ts,.json",
    "prepack": "yarn build",
    "test": "TZ=UTC jest src",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "prettier": "@shelf/prettier-config",
  "devDependencies": {
    "@shelf/eslint-config": "5.2.3",
    "@shelf/prettier-config": "1.0.0",
    "@shelf/tsconfig": "0.1.0",
    "@swc/core": "1.4.11",
    "@swc/jest": "0.2.36",
    "@types/jest": "29.5.14",
    "@types/node": "20",
    "eslint": "8.57.1",
    "husky": "9.1.4",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "lint-staged": "15.5.1",
    "prettier": "3.5.3",
    "ts-jest-resolver": "2.0.1",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{html,md,yml}": [
      "prettier --write"
    ],
    "*.{ts,js,json}": [
      "eslint --fix"
    ]
  }
}
