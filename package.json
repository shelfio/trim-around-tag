{
  "name": "@shelf/trim-around-tag",
  "version": "2.0.5",
  "description": "Trims text to max length around custom HTML tag",
  "keywords": [],
  "repository": "shelfio/trim-around-tag",
  "license": "MIT",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "shelf.io"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rm -rf lib/ && yarn build:types && yarn build:webpack",
    "build:types": "tsc -p tsconfig.types.json",
    "build:webpack": "NODE_ENV=production webpack",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts,.json --fix",
    "lint:ci": "eslint . --ext .js,.ts,.json",
    "prepack": "yarn build",
    "test": "TZ=UTC jest src",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{html,md,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,js,json}": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": "@shelf/prettier-config",
  "jest": {
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@babel/cli": "7.10.3",
    "@babel/core": "7.10.3",
    "@babel/preset-env": "7.10.3",
    "@babel/preset-typescript": "7.10.1",
    "@shelf/eslint-config": "0.18.0",
    "@shelf/prettier-config": "0.0.7",
    "@types/jest": "26.0.3",
    "@types/node": "10",
    "@types/webpack": "4.41.18",
    "babel-jest": "26.1.0",
    "babel-loader": "8.1.0",
    "eslint": "7.4.0",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "typescript": "3.9.5",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.12"
  },
  "engines": {
    "node": ">=6"
  },
  "publishConfig": {
    "access": "public"
  }
}
