{
  "name": "@shelf/trim-around-tag",
  "version": "2.0.5",
  "description": "Trims text to max length around custom HTML tag",
  "keywords": [],
  "repository": "shelfio/trim-around-tag",
  "license": "MIT",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "shelf.io"
  },
  "files": [
    "index.js",
    "dist"
  ],
  "main": "dist/trim-around-tag.js",
  "umd:main": "dist/trim-around-tag.umd.js",
  "module": "dist/trim-around-tag.m.js",
  "source": "index.js",
  "scripts": {
    "build": "microbundle",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts,.json --fix",
    "lint:ci": "eslint . --ext .js,.ts,.json",
    "prepack": "yarn build",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{html,json,md,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@shelf/eslint-config": "0.11.0",
    "eslint": "6.6.0",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "lint-staged": "9.4.3",
    "microbundle": "0.11.0",
    "prettier": "1.19.1"
  },
  "engines": {
    "node": ">=6"
  },
  "publishConfig": {
    "access": "public"
  }
}
