{
  "name": "@shelf/trim-around-tag",
  "version": "2.0.5",
  "description": "Trims text to max length around custom HTML tag",
  "license": "MIT",
  "repository": "shelfio/trim-around-tag",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "shelf.io"
  },
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "build": "microbundle",
    "coverage": "jest --coverage",
    "lint": "eslint . --fix",
    "prepack": "yarn build",
    "test": "jest"
  },
  "files": [
    "index.js",
    "dist"
  ],
  "main": "dist/trim-around-tag.js",
  "umd:main": "dist/trim-around-tag.umd.js",
  "module": "dist/trim-around-tag.m.js",
  "source": "index.js",
  "keywords": [],
  "devDependencies": {
    "eslint": "5.3.0",
    "eslint-config-prettier": "2.10.0",
    "eslint-plugin-prettier": "2.6.2",
    "husky": "0.15.0-rc.13",
    "jest": "23.5.0",
    "lint-staged": "7.2.2",
    "microbundle": "0.6.0",
    "prettier": "1.14.2"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
